<Window
  x:Class="StartApp.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:StartApp"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Title="MainWindow"
  Width="400"
  Height="600"
  MinWidth="400"
  MinHeight="600"
  DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
  WindowStartupLocation="CenterScreen"
  mc:Ignorable="d">
  <Grid>
    <Frame x:Name="ContentFrame" />

    <!--  MessageBoxPanel  -->
    <StackPanel
      x:Name="MessageBoxPanel"
      Grid.RowSpan="2"
      Grid.Column="0"
      Margin="0,10,0,0"
      HorizontalAlignment="Center"
      VerticalAlignment="Top"
      Panel.ZIndex="10000" />
    <!--  NotificationPanel  -->
    <StackPanel
      x:Name="NotificationPanel"
      Grid.RowSpan="2"
      MaxWidth="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=ActualWidth, Converter={StaticResource DivideTwoConverter}}"
      Margin="0,30,10,0"
      HorizontalAlignment="Right"
      VerticalAlignment="Bottom"
      Panel.ZIndex="100000" />

  </Grid>
</Window>
